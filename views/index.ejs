<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Document</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    .floating {
      position: absolute;
      border-radius: 9999px;
      opacity: 0.3;
      animation: float 8s ease-in-out infinite;
    }

    @keyframes float {
      0%   { transform: translateY(0); }
      50%  { transform: translateY(-20px); }
      100% { transform: translateY(0); }
    }

    .float-delay-1 { animation-delay: -2s; }
    .float-delay-2 { animation-delay: -3s; }
    .float-delay-3 { animation-delay: -4s; }
  </style>
</head>
<body class="relative bg-gray-100 p-6 overflow-hidden">

  <!-- Floating background objects -->
  <div class="floating float-delay-1 bg-blue-300 w-24 h-24 top-10 left-10"></div>
  <div class="floating float-delay-2 bg-purple-300 w-16 h-16 top-40 right-20"></div>
  <div class="floating float-delay-3 bg-pink-300 w-20 h-20 bottom-20 left-32"></div>

  <div class="relative max-w-xl mx-auto bg-white p-6 rounded shadow z-10">
    <form action="/create" method="post" class="space-y-4">
      <input type="text" name="title" placeholder="Enter title" class="w-full p-2 border rounded" >
      
      <textarea name="content" placeholder="Enter text here" rows="5" class="w-full p-2 border rounded" ></textarea>
      
      <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Submit</button>
    </form>
  </div>
  <% if(files.length >0){%>
        <% files.forEach((val)=>{%>
            <div class="relative max-w-xl mx-auto mt-6 bg-white p-6 rounded shadow z-10">
                <h2 class="text-xl font-bold mb-2"><%= val %></h2>   
                <a  class="text-s font-bold mb-2 bg-blue-300" href="/file/<%= val %>">Read More.</a>
            </div>
        <% }) %>
    <% } else { %>
        <div class="relative max-w-xl mx-auto mt-6 bg-white p-6 rounded shadow z-10">
                <h2 class="text-xl font-bold mb-2">no tasks yet</h2>   
            </div>
    <%} %>
</body>
</html>
